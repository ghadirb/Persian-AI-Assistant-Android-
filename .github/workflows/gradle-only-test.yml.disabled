name: Gradle Only Test

on:
  workflow_dispatch:

jobs:
  gradle-test:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
    
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
    
    - name: Grant execute permission for gradlew
      run: chmod +x gradlew
    
    - name: Test Gradle wrapper
      run: ./gradlew --version
    
    - name: Show project info
      run: ./gradlew projects
    
    - name: Show dependencies (root)
      run: ./gradlew dependencies --configuration classpath
      continue-on-error: true
    
    - name: Try clean only
      run: ./gradlew clean --console=plain
    
    - name: Check if clean worked
      run: |
        echo "Clean completed. Checking build directory..."
        ls -la app/build/ 2>/dev/null || echo "No build directory (expected after clean)"
