name: Simple Project Build

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
    
    - uses: android-actions/setup-android@v3
    
    - name: Backup original build.gradle
      run: |
        cp app/build.gradle app/build.gradle.backup
        cp app/build-simple.gradle app/build.gradle
        echo "Using simplified build.gradle"
    
    - name: Make gradlew executable
      run: chmod +x gradlew
    
    - name: Build simple APK
      run: ./gradlew assembleDebug
    
    - name: Restore original build.gradle
      run: cp app/build.gradle.backup app/build.gradle
    
    - name: Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: simple-project-apk
        path: app/build/outputs/apk/debug/*.apk
