name: Super Simple Test

on:
  workflow_dispatch:

jobs:
  test:
    runs-on: ubuntu-latest
    timeout-minutes: 5
    
    steps:
    - name: Checkout
      uses: actions/checkout@v4
        
    - name: Setup Java
      uses: actions/setup-java@v4
      with:
        java-version: '11'
        distribution: 'temurin'
        
    - name: Make gradlew executable
      run: chmod +x ./gradlew
      
    - name: Test Gradle
      run: |
        echo "Testing Gradle wrapper..."
        ./gradlew --version
        echo "Gradle wrapper works!"
        
    - name: List project files
      run: |
        echo "=== Root files ==="
        ls -la
        echo "=== App files ==="
        ls -la app/
        echo "=== Build files ==="
        cat build.gradle
        echo "=== App build files ==="
        head -20 app/build.gradle
