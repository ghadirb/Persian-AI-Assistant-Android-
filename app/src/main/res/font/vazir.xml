<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- Vazir Regular -->
    <font
        android:font="@font/vazir_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/vazir_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />
    
    <!-- Vazir Medium -->
    <font
        android:font="@font/vazir_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/vazir_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />
    
    <!-- Vazir Bold -->
    <font
        android:font="@font/vazir_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/vazir_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
        
</font-family>
