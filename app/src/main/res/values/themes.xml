<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PersianAIAssistant" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/persian_blue</item>
        <item name="colorPrimaryVariant">@color/persian_blue_dark</item>
        <item name="colorSecondary">@color/persian_gold</item>
        <item name="colorSecondaryVariant">@color/persian_gold_dark</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorBackground">@color/background_light</item>
        
        <!-- Custom chat attributes -->
        <item name="chat_bubble_user">@color/persian_blue</item>
        <item name="chat_bubble_ai">@color/surface_light</item>
        <item name="chat_text_user">@color/white</item>
        <item name="chat_text_ai">@color/black</item>
        <item name="chat_time_user">@color/white</item>
        <item name="chat_time_ai">@color/gray_600</item>
        
        <item name="android:windowSplashScreenBackground">@drawable/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="Theme.PersianAIAssistant" parent="Base.Theme.PersianAIAssistant">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceBody1">@style/TextAppearance.PersianAIAssistant.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.PersianAIAssistant.Body2</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.PersianAIAssistant.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.PersianAIAssistant.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.PersianAIAssistant.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.PersianAIAssistant.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.PersianAIAssistant.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.PersianAIAssistant.Caption</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.PersianAIAssistant.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PersianAIAssistant.Button.OutlinedButton</item>
        <item name="materialButtonTextStyle">@style/Widget.PersianAIAssistant.Button.TextButton</item>
        
        <!-- Card style -->
        <item name="cardViewStyle">@style/Widget.PersianAIAssistant.CardView</item>
        
        <!-- Chip style -->
        <item name="chipStyle">@style/Widget.PersianAIAssistant.Chip.Choice</item>
        
        <!-- EditText style -->
        <item name="editTextStyle">@style/Widget.PersianAIAssistant.EditText</item>
        
        <!-- Switch style -->
        <item name="switchStyle">@style/Widget.PersianAIAssistant.CompoundButton.Switch</item>
        
        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Widget.PersianAIAssistant.Toolbar</item>
        
        <!-- Custom attributes -->
        <item name="materialButtonTextStyle">@style/Widget.PersianAIAssistant.Button.TextButton</item>
        <item name="contentInsetLeftWithNavigation">0dp</item>
        
        <!-- RTL support -->
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    
    <!-- Text appearance styles -->
    <style name="TextAppearance.PersianAIAssistant.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/vazir</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/vazir</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/vazir_bold</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/vazir_bold</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/vazir_bold</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.PersianAIAssistant.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/vazir_light</item>
        <item name="android:fontFamily">@font/vazir_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.PersianAIAssistant.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="Widget.PersianAIAssistant.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="Widget.PersianAIAssistant.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="fontFamily">@font/vazir_medium</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.PersianAIAssistant.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>
    
    <!-- Chip style -->
    <style name="Widget.PersianAIAssistant.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.PersianAIAssistant.Caption</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="closeIconSize">16dp</item>
        <item name="closeIconTint">?attr/colorOnSurface</item>
    </style>
    
    <!-- EditText style -->
    <style name="Widget.PersianAIAssistant.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.PersianAIAssistant.Body1</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
    
    <!-- Material TextInputEditText style -->
    <style name="Widget.MaterialComponents.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.PersianAIAssistant.Body1</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Switch style -->
    <style name="Widget.PersianAIAssistant.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">true</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="Widget.PersianAIAssistant.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.PersianAIAssistant.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.PersianAIAssistant.Subtitle2</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetLeftWithNavigation">0dp</item>
    </style>
    
    <!-- App theme with no action bar -->
    <style name="Theme.PersianAIAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.PersianAIAssistant.Splash" parent="Theme.PersianAIAssistant">
        <item name="android:windowBackground">@color/persian_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/persian_blue</item>
        <item name="android:navigationBarColor">@color/persian_blue</item>
    </style>

    <!-- Full screen theme -->
    <style name="Theme.PersianAIAssistant.FullScreen" parent="Theme.PersianAIAssistant">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
