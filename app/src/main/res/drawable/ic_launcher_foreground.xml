            android:pathData="M-6,-6 Q0,-10 6,-6 Q6,0 0,4 Q-6,0 -6,-6 Z" />
        
        <!-- Neural network connections -->
        <group android:alpha="0.8">
            <path
                android:strokeColor="#E3F2FD"
                android:strokeWidth="1"
                android:pathData="M-12,-8 L-6,-6 M6,-6 L12,-8 M-6,-6 L6,-6 M0,4 L-8,8 M0,4 L8,8" />
        </group>
        
        <!-- Decorative Persian pattern dots -->
