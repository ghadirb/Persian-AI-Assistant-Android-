<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow backup of all app data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="database" path="secure_database.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of user preferences and data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="conversations/"/>
        <include domain="file" path="models/"/>
        
        <!-- Exclude temporary and sensitive data -->
    </device-transfer>
</data-extraction-rules>
